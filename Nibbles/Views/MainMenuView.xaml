<UserControl x:Class="Nibbles.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nibbles"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"             
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <Image gif:ImageBehavior.AnimatedSource="/Resources/Images/logo.gif"/>
            <Button Content="Börja spela" Style="{StaticResource ButtonTemplate}" Command="{Binding GameViewCommand}"></Button>
            <Button Content="Avsluta spel" Style="{StaticResource ButtonTemplate}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
